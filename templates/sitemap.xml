<?xml version="1.0" encoding="utf-8"?>

<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

  <url>
    <loc>$host$homepage.path</loc>
    <lastmod>$homepage.build_date_str</lastmod>
    <changefreq>always</changefreq>
    <priority>1</priority>
  </url>

  #for post in $posts
  <url>
    <loc>$host$post.url</loc>
    <lastmod>$post.build_date_str</lastmod>
    <changefreq>always</changefreq>
    <priority>0.5</priority>
  </url>
  #end for

</urlset>
